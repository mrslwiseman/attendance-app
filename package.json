{
  "name": "back2bikes-attendance",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "pretest": "npm run lint --silent"
  },
  "description": "Workshop attendance app for back2bikes volunteers.",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "casual": "^1.5.14",
    "indexof": "0.0.1",
    "lodash": "^4.15.0",
    "meteor-node-stubs": "^0.2.4",
    "rc-slider": "^8.1.3",
    "react": "^15.6.1",
    "react-addons-pure-render-mixin": "^15.6.0",
    "react-dom": "^15.6.1",
    "react-modal": "^2.0.6",
    "react-router-dom": "^4.1.1",
    "semantic-ui-css": "^2.2.10",
    "semantic-ui-react": "^0.69.0",
    "stardust": "^0.52.5",
    "sugar": "^2.0.1",
    "typescript": "^1.8.10"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-root-slash-import": "^1.1.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-meteor": "^4.0.0",
    "eslint-plugin-react": "^6.2.0",
    "@storybook/react": "^3.3.12",
    "@storybook/addon-actions": "^3.3.12",
    "@storybook/addon-links": "^3.3.12"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Back2bikes/attendance-app.git"
  },
  "author": "Joseph Szili",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Back2bikes/attendance-app/issues"
  },
  "homepage": "https://github.com/Back2bikes/attendance-app#readme"
}
